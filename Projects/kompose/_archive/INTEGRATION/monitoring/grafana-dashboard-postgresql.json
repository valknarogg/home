{
  "dashboard": {
    "title": "PostgreSQL Database Performance",
    "tags": ["postgresql", "database", "core"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Database Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "pg_up",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "1", "text": "UP"},
              {"type": "value", "value": "0", "text": "DOWN"}
            ],
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Active Connections",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(pg_stat_database_numbackends)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Connection Pool Usage",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "(sum(pg_stat_database_numbackends) / pg_settings_max_connections) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Database Size",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(pg_database_size_bytes) / 1024 / 1024",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decmbytes",
            "decimals": 2
          }
        }
      },
      {
        "id": 5,
        "title": "Connections by Database",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "legendFormat": "{{datname}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Database Sizes",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "pg_database_size_bytes / 1024 / 1024",
            "legendFormat": "{{datname}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decmbytes"
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 7,
        "title": "Transactions per Second",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(pg_stat_database_xact_commit[5m])",
            "legendFormat": "{{datname}} - commits",
            "refId": "A"
          },
          {
            "expr": "rate(pg_stat_database_xact_rollback[5m])",
            "legendFormat": "{{datname}} - rollbacks",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "TPS"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Rows Read vs Written",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "rate(pg_stat_database_tup_fetched[5m])",
            "legendFormat": "{{datname}} - fetched",
            "refId": "A"
          },
          {
            "expr": "rate(pg_stat_database_tup_inserted[5m])",
            "legendFormat": "{{datname}} - inserted",
            "refId": "B"
          },
          {
            "expr": "rate(pg_stat_database_tup_updated[5m])",
            "legendFormat": "{{datname}} - updated",
            "refId": "C"
          },
          {
            "expr": "rate(pg_stat_database_tup_deleted[5m])",
            "legendFormat": "{{datname}} - deleted",
            "refId": "D"
          }
        ]
      },
      {
        "id": 9,
        "title": "Cache Hit Ratio",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sum(pg_stat_database_blks_hit) / (sum(pg_stat_database_blks_hit) + sum(pg_stat_database_blks_read)) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 90, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Locks by Type",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 20},
        "targets": [
          {
            "expr": "pg_locks_count",
            "legendFormat": "{{mode}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 11,
        "title": "Deadlocks",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 20},
        "targets": [
          {
            "expr": "rate(pg_stat_database_deadlocks[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.01, "color": "yellow"},
                {"value": 0.1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "title": "Query Duration (by Database)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "rate(pg_stat_statements_mean_exec_time[5m])",
            "legendFormat": "{{datname}} - avg",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 13,
        "title": "Slow Queries (>1s)",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "topk(10, pg_stat_statements_mean_exec_time > 1000)",
            "format": "table",
            "refId": "A"
          }
        ]
      },
      {
        "id": 14,
        "title": "WAL Generation Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 36},
        "targets": [
          {
            "expr": "rate(pg_stat_wal_bytes[5m])",
            "legendFormat": "WAL bytes/s",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "Bps"},
          {"format": "short"}
        ]
      },
      {
        "id": 15,
        "title": "Checkpoint Statistics",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 36},
        "targets": [
          {
            "expr": "rate(pg_stat_bgwriter_checkpoints_timed[5m])",
            "legendFormat": "Timed checkpoints",
            "refId": "A"
          },
          {
            "expr": "rate(pg_stat_bgwriter_checkpoints_req[5m])",
            "legendFormat": "Requested checkpoints",
            "refId": "B"
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus"
        },
        {
          "name": "database",
          "type": "query",
          "query": "label_values(pg_stat_database_numbackends, datname)",
          "datasource": "$datasource",
          "multi": true,
          "includeAll": true
        }
      ]
    }
  }
}
