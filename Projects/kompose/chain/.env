# =================================================================
# CHAIN Stack Configuration - Workflow & Automation
# =================================================================

# Stack identification
COMPOSE_PROJECT_NAME=chain

# Network configuration
NETWORK_NAME=kompose
TZ=Europe/Paris
TIMEZONE=Europe/Paris

# =================================================================
# n8n Configuration
# =================================================================

# Docker image
N8N_IMAGE=n8nio/n8n:latest

# Database configuration
N8N_DB_NAME=n8n

# Traefik configuration
N8N_TRAEFIK_HOST=${TRAEFIK_HOST_CHAIN}

# Application port
N8N_PORT=5678

# Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin

# =================================================================
# Semaphore Configuration
# =================================================================

# Docker images
SEMAPHORE_IMAGE=semaphoreui/semaphore:v2.16.18
SEMAPHORE_RUNNER_IMAGE=public.ecr.aws/semaphore/pro/runner:v2.16.18

# Database configuration
SEMAPHORE_DB_NAME=semaphore

# Traefik configuration
SEMAPHORE_TRAEFIK_HOST=${TRAEFIK_HOST_AUTO}

# Application port
SEMAPHORE_PORT=3000

# Admin configuration
SEMAPHORE_ADMIN=admin
SEMAPHORE_ADMIN_NAME=Admin

# =================================================================
# Shared Configuration
# =================================================================

# Email configuration (shared by both services)
EMAIL_TRANSPORT=smtp

# NOTE: Secrets are stored in root secrets.env file
