# Core Stack Environment Configuration

# Project Configuration
COMPOSE_PROJECT_NAME=core
NETWORK_NAME=kompose
TIMEZONE=Europe/Amsterdam

# PostgreSQL Configuration
POSTGRES_IMAGE=postgres:16-alpine
DB_USER=kompose
DB_PASSWORD=${POSTGRES_PASSWORD:-change_this_password}
DB_NAME=kompose
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_SHARED_BUFFERS=256MB
# POSTGRES_PORT=5432  # Uncomment to expose externally

# Redis Configuration
REDIS_IMAGE=redis:7-alpine
REDIS_PASSWORD=${REDIS_PASSWORD:-change_this_password}
# REDIS_PORT=6379  # Uncomment to expose externally

# Mosquitto MQTT Configuration
MOSQUITTO_IMAGE=eclipse-mosquitto:2
MQTT_PORT=1883
MQTT_WS_PORT=9001

# Redis Commander (Web UI)
REDIS_COMMANDER_IMAGE=rediscommander/redis-commander:latest
REDIS_API_USER=admin
REDIS_API_PASSWORD=${REDIS_API_PASSWORD:-change_this_password}
REDIS_API_PORT=8081
REDIS_API_TRAEFIK_HOST=${REDIS_API_TRAEFIK_HOST:-redis.localhost}
