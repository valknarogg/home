# Watch Stack - Monitoring & Observability Configuration

# Project Configuration
COMPOSE_PROJECT_NAME=watch
NETWORK_NAME=kompose
TIMEZONE=Europe/Amsterdam

# Prometheus Configuration
PROMETHEUS_IMAGE=prom/prometheus:latest
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=30d
TRAEFIK_HOST_PROMETHEUS=prometheus.localhost
# Generate with: echo $(htpasswd -nb admin your_password) | sed -e s/\\$/\\$\\$/g
PROMETHEUS_AUTH=admin:$$apr1$$xyz

# Grafana Configuration
GRAFANA_IMAGE=grafana/grafana:latest
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_this_password
GRAFANA_PLUGINS=grafana-clock-panel,grafana-simple-json-datasource,grafana-piechart-panel,grafana-worldmap-panel
TRAEFIK_HOST_GRAFANA=grafana.localhost
# Grafana Database (PostgreSQL from core)
GRAFANA_DB_NAME=grafana
GRAFANA_DB_USER=grafana
GRAFANA_DB_PASSWORD=change_this_password

# OpenTelemetry Collector Configuration
OTEL_IMAGE=otel/opentelemetry-collector-contrib:latest
OTEL_GRPC_PORT=4317
OTEL_HTTP_PORT=4318
OTEL_HEALTH_PORT=13133
OTEL_ZPAGES_PORT=55679

# PostgreSQL Exporter Configuration
POSTGRES_EXPORTER_IMAGE=prometheuscommunity/postgres-exporter:latest
POSTGRES_EXPORTER_PORT=9187
POSTGRES_EXPORTER_USER=kompose
POSTGRES_EXPORTER_PASSWORD=change_this_password
POSTGRES_EXPORTER_DB=kompose

# Redis Exporter Configuration
REDIS_EXPORTER_IMAGE=oliver006/redis_exporter:latest
REDIS_EXPORTER_PORT=9121
REDIS_EXPORTER_PASSWORD=change_this_password

# MQTT Exporter Configuration
MQTT_EXPORTER_IMAGE=kpetrem/mqtt-exporter:latest
MQTT_EXPORTER_PORT=9000
MQTT_EXPORTER_TOPIC=#
MQTT_V5_PROTOCOL=False

# cAdvisor Configuration
CADVISOR_IMAGE=gcr.io/cadvisor/cadvisor:latest
CADVISOR_PORT=8082

# Node Exporter Configuration
NODE_EXPORTER_IMAGE=prom/node-exporter:latest

# Blackbox Exporter Configuration
BLACKBOX_EXPORTER_IMAGE=prom/blackbox-exporter:latest
BLACKBOX_EXPORTER_PORT=9115

# Alertmanager Configuration
ALERTMANAGER_IMAGE=prom/alertmanager:latest
ALERTMANAGER_PORT=9093
TRAEFIK_HOST_ALERTMANAGER=alerts.localhost
# Generate with: echo $(htpasswd -nb admin your_password) | sed -e s/\\$/\\$\\$/g
ALERTMANAGER_AUTH=admin:$$apr1$$xyz

# Integration URLs (adjust based on your setup)
UMAMI_URL=http://track_app:3000
MQTT_BROKER=core-mqtt:1883
HOMEASSISTANT_URL=http://home_homeassistant:8123
