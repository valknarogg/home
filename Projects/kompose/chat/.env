# =================================================================
# MESSAGING Stack Configuration
# =================================================================
# Combines Gotify (notifications) and Mailhog (email testing/relay)

# Stack identification
COMPOSE_PROJECT_NAME=messaging

# -------------------------------------------------------------------
# Gotify Configuration
# -------------------------------------------------------------------
GOTIFY_IMAGE=gotify/server:latest
GOTIFY_PORT=80
GOTIFY_DEFAULTUSER_NAME=admin
GOTIFY_DEFAULTUSER_PASS=admin

# -------------------------------------------------------------------
# Mailhog Configuration
# -------------------------------------------------------------------
MAILHOG_IMAGE=mailhog/mailhog:latest
MAILHOG_PORT=8025

# Outgoing SMTP (set to 'true' to relay emails externally via configured SMTP)
# When false, all emails are caught locally for testing
# When true, Mailhog will use the SMTP config from root .env for outgoing mail
MAILHOG_OUTGOING_SMTP_ENABLED=false

# -------------------------------------------------------------------
# Traefik Configuration
# -------------------------------------------------------------------
TRAEFIK_ENABLED=true

# NOTE: Secrets are stored in root secrets.env file
# Available secrets for this stack:
# - EMAIL_SMTP_PASSWORD (used by Mailhog when MAILHOG_OUTGOING_SMTP_ENABLED=true)
